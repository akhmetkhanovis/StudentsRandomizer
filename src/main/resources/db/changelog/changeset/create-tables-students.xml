<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-students-table" author="ildar.akhmetkhanov">
        <createTable tableName="students">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="surname" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="captain" type="boolean">
                <constraints nullable="false"/>
            </column>

            <column name="question_score" type="double"/>

            <column name="answer_score" type="double"/>

            <column name="team" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>